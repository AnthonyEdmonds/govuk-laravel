{
    "name": "govuk-laravel",
    "description": "Use the GOV.UK Design System within the Laravel ecosystem, complete with Blade components and templates!",
    "keywords": [
        "laravel",
        "gov.uk",
        "design system",
        "blade component",
        "blade template"
    ],
    "author": "Anthony Edmonds",
    "license": "MIT",
    "homepage": "https://github.com/AnthonyEdmonds/govuk-laravel",
    "scripts": {
        "coverage": "php vendor/bin/paratest --coverage-text=coverage.txt",
        "larastan": "php vendor/bin/phpstan analyse --memory-limit 512M",
        "pint": "php ./vendor/bin/pint",
        "prepare": "husky install",
        "test": "php vendor/bin/paratest",
        "test-slow": "php vendor/bin/phpunit"
    },
    "devDependencies": {
        "govuk-frontend": "^5.0",
        "husky": "^8"
    }
}
